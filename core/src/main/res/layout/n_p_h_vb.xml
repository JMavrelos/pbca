<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<TextView
        android:id="@+id/number_picker_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="123" />

    <ImageView
        android:id="@+id/number_picker_increase"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_h_increase"
        android:tint="?android:attr/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/number_picker_increase_big"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/number_picker_value"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/number_picker_decrease"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_h_decrease"
        android:tint="?android:attr/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/number_picker_decrease_big"
        app:layout_constraintEnd_toStartOf="@+id/number_picker_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/number_picker_increase_big"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_h_increase_big"
        android:tint="?android:attr/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/number_picker_increase"
        app:layout_constraintStart_toStartOf="@+id/number_picker_increase"
        app:layout_constraintTop_toBottomOf="@+id/number_picker_increase" />

    <ImageView
        android:id="@+id/number_picker_decrease_big"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_h_decrease_big"
        android:tint="?android:attr/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/number_picker_decrease"
        app:layout_constraintStart_toStartOf="@+id/number_picker_decrease"
        app:layout_constraintTop_toBottomOf="@+id/number_picker_decrease" />


</merge>